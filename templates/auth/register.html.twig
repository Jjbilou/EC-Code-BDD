{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Page -->
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            {{ form_start(form, {'attr': {'class': "card-body flex flex-col gap-5 p-10", "id": "sign_up_form"}} )}}
                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5"
                        Inscription
                    </h3>
                    <div class="flex items-center justify-center">
                        <span class="text-2sm text-gray-700 me-1.5">
                        Vous avez déjà un compte ?
                        </span>
                        <a class="text-2sm link" href="{{ path('auth.login') }}">
                            Me connecter
                        </a>
                    </div>
                </div>

                <div class="flex flex-col gap-1">
                    {{ form_label(form.email, 'Email', {'attr': {'class': 'form-label text-gray-900'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'input', 'placeholder': 'Adresse email'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="flex flex-col gap-1">
                    {{ form_label(form.plainPassword.first, 'Mot de passe', {'attr': {'class': 'form-label font-normal text-gray-900'}}) }}
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
                        </button>
                    </div>
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="flex flex-col gap-1">
                    {{ form_label(form.plainPassword.second, 'Confirmer le mot de passe', {'attr': {'class': 'form-label font-normal text-gray-900'}}) }}
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
                        </button>
                    </div>
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <label class="checkbox-group">
                    {{ form_widget(form.agreeTerms, {'attr': {'class': 'checkbox checkbox-sm'}}) }}
                    <span class="checkbox-label">
                        J'accepte les <a class="text-2sm link" href="#">GCU</a>
                    </span>
                </label>
                {{ form_errors(form.agreeTerms) }}
                <button class="btn btn-primary flex justify-center grow">Inscription</button>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- End of Page -->
{% endblock %}
